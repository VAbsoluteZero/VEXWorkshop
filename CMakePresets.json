{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 18,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "DefaultCfg",
			"displayName": "Default Config",
			"generator": "Visual Studio 17 2022",
			"binaryDir": "${sourceDir}/cmake_output/${presetName}",
			"hidden": true,
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_CONFIGURATION_TYPES": "Debug;Release;RELWITHDEBINFO",
				"VEX_DEBUG_CMAKE": false,
				"SDL_SSE2": "ON",
				"SDL_SSE3": "ON",
				"SDL_SSEMATH": "ON",
				"SDL_MMX": "ON",
				"SDL_ASSEMBLY": "ON"
			}
		},
		{
			"name": "clang_base",
			"displayName": "Clang default",
			"inherits": "DefaultCfg",
			"hidden": true,
			"generator": "Ninja",
			"cacheVariables": {
				"VEX_MSVC_CLANG": true,
				"CMAKE_CXX_COMPILER": "clang-cl",
				"CMAKE_C_COMPILER": "clang-cl",
				"VEX_USE_DX11": true
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"intelliSenseMode": "windows-clang-x64"
				}
			}
		},
		{
			"name": "clang_win",
			"displayName": "Clang Release",
			"inherits": "clang_base",
			"generator": "Ninja",
			"description": "Default build options for Clang",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "clang_win_rdbg",
			"displayName": "Clang ReleaseDbgInfo",
			"inherits": "clang_base",
			"generator": "Ninja",
			"description": "Default build options for Clang",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "clang_win_dbg",
			"displayName": "Clang Debug",
			"inherits": "clang_base",
			"generator": "Ninja",
			"description": "Default build options for Clang",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "clang_win_rdbg_wgpu",
			"displayName": "ClangWGPU ReleaseDbgInfo",
			"inherits": "clang_base",
			"generator": "Ninja",
			"description": "Default build options for Clang",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo",
				"VEX_USE_WGPU": true,
				"VEX_USE_DAWN": false,
				"VEX_USE_DX11": false
			}
		},
		{
			"name": "clang_win_dbg_wgpu",
			"displayName": "ClangWGPU Debug",
			"inherits": "clang_base",
			"generator": "Ninja",
			"description": "Default build options for Clang",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"VEX_USE_WGPU": true,
				"VEX_USE_DAWN": false,
				"VEX_USE_DX11": false
			}
		},
		{
			"name": "clang_win_dbg_dawn",
			"displayName": "ClangDawn Debug",
			"inherits": "clang_base",
			"generator": "Ninja",
			"description": "Default build options for Clang",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"VEX_USE_WGPU": false,
				"VEX_USE_DAWN": true,
				"VEX_USE_DX11": false
			}
		},
		{
			"name": "MSVC",
			"displayName": "MSVC",
			"hidden": true,
			"description": "Build options for MSVC",
			"inherits": "DefaultCfg",
			"cacheVariables": {
				"VEX_MSVC_CLANG": false, 
				"CMAKE_CXX_COMPILER": "MSVC",
				"VEX_USE_DX11": true
			}
		},
		{
			"name": "MSVCDebugDx11",
			"displayName": "MSVC Debug",
			"inherits": "MSVC",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "MSVCReleaseDx11",
			"displayName": "MSVC Release",
			"inherits": "MSVC",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	]
}